#include<stdio.h>


/*
1)	Escreva um programa que leia do usu√°rio o nome de um arquivo de texto.
    Em seguida, mostre na tela quantas linhas o arquivo possui. */

int main()
{

    {
        char url[]="cont.txt";
        char ch;
        FILE *arq;
        int cont=0;


        printf("Informe o nome do arquivo: ");
        scanf("%[^\n]s",url);

        arq = fopen(url, "r");

        if(arq == NULL){

            printf("Erro, nao foi possivel abrir o arquivo\n");
        return 1;

        }else{

            while((ch=fgetc(arq))!= EOF ){

                if(ch == '\n')

                    cont++;
            }

        if(cont == 0){

            printf("O arquivo esta vazio!!");


        }else{

              printf("Contem %d linha(s) no arquivo ",cont);

          }
        }
 fclose(arq);


        return 0;
    }
}
